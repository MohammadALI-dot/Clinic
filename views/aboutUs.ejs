    <div class="team-grid">
      <div class="team-member">
        <h3>Dr. Batoul Yassine</h3>
        <p>professional Doctor</p>
      </div>
      <div class="team-member">
        <h3>Eng. Mohammad Ali Yassine</h3>
        <p>Software Engineering</p>
      </div>
      
    </div>
  </section>

</body>
</html>
